<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chain of Responsibility" Height="300" Width="400">
    <Grid>
        <ComboBox x:Name="RequestTypeComboBox" Margin="10,10,10,0" VerticalAlignment="Top">
            <ComboBoxItem Content="Logging" />
            <ComboBoxItem Content="Authentication" />
            <ComboBoxItem Content="Notification" />
        </ComboBox>
        <TextBox x:Name="RequestContentTextBox" Margin="10,50,10,0" VerticalAlignment="Top" Height="50" />
        <Button Content="Send Request" Margin="10,110,10,0" VerticalAlignment="Top" Click="SendRequestButton_Click"/>
        <TextBlock x:Name="OutputTextBlock" Margin="10,150,10,0" TextWrapping="Wrap" />
    </Grid>
</Window>
